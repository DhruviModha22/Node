<div class="row">
    <div class="col-12 mb-4">
        <h1>All Movies</h1>
        <a href="/movies/new" class="btn btn-primary">Add New Movie</a>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <% movies.forEach(movie => { %>
        <div class="col">
            <div class="card h-100">
                <img src="<%= movie.imageUrl %>" class="card-img-top" alt="<%= movie.title %>">
                <div class="card-body">
                    <h5 class="card-title"><%= movie.title %></h5>
                    <p class="card-text">
                        <strong>Director:</strong> <%= movie.director %><br>
                        <strong>Year:</strong> <%= movie.year %><br>
                        <strong>Genre:</strong> <%= movie.genre %><br>
                        <strong>Rating:</strong> <%= movie.rating %>/10
                    </p>
                    <div class="d-flex justify-content-between">
                        <a href="/movies/<%= movie._id %>" class="btn btn-info">View Details</a>
                        <a href="/movies/<%= movie._id %>/edit" class="btn btn-warning">Edit</a>
                        <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this movie?')">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div> 